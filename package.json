{
  "name": "ts-polyfill-loader",
  "version": "0.1.0",
  "description": "Polyfills generator for a full ES2015+ environment support in TypeScript projects",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --no-cache",
    "build": "rm -rf dist && tsc --rootDir src",
    "prelint": "prettier --write \"{src,test,scripts,jest}/**/*.{ts,js}\"",
    "lint": "tslint \"src/**/*.ts\" &&  \"test/**/*.spec.ts\"",
    "generate-support-info": "node -r ts-node/register scripts/generate-built-ins-support-info.ts",
    "generate-polyfills": "node -r ts-node/register scripts/generate-polyfills.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/webschik/ts-polyfill-loader.git"
  },
  "keywords": [
    "TypeScript",
    "webpack",
    "loader",
    "polyfill",
    "core-js",
    "@babel/polyfill"
  ],
  "author": "webschik",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webschik/ts-polyfill-loader/issues"
  },
  "homepage": "https://github.com/webschik/ts-polyfill-loader#readme",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/loader-utils": "^1.1.3",
    "@types/lodash": "^4.14.116",
    "@types/memory-fs": "^0.3.1",
    "@types/node": "^10.5.7",
    "@types/semver": "^5.5.0",
    "awesome-typescript-loader": "^5.2.0",
    "compat-table": "github:kangax/compat-table",
    "core-js": "^2.5.7",
    "electron-to-chromium": "^1.3.62",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "lodash": "^4.17.10",
    "memory-fs": "^0.4.1",
    "prettier": "^1.14.2",
    "raw-loader": "^0.5.1",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.5.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-webschik": "^1.0.0",
    "typescript": "^3.0.1",
    "webpack": "^4.16.5"
  },
  "dependencies": {
    "browserslist": "^4.0.1",
    "loader-utils": "^1.1.0",
    "schema-utils": "^1.0.0",
    "semver": "^5.5.1"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "collectCoverageFrom": [
      "src/*.ts",
      "src/**/*.ts",
      "!src/*.d.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/files/",
      "/test/helpers"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/jest/config.js",
    "testRegex": "(/test/.*|\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
