{
  "name": "ts-polyfill-loader",
  "version": "0.1.0",
  "description": "Webpack loader that generates Core-js polyfills necessary for a full ES2015+ environment in TypeScript projects",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --no-cache",
    "build": "rm -rf dist && tsc",
    "lint": "tslint \"src/**/*.ts\" &&  \"test/**/*.spec.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/webschik/ts-polyfill-loader.git"
  },
  "keywords": [
    "TypeScript",
    "webpack",
    "loader",
    "polyfill",
    "core-js",
    "@babel/polyfill"
  ],
  "author": "webschik",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webschik/ts-polyfill-loader/issues"
  },
  "homepage": "https://github.com/webschik/ts-polyfill-loader#readme",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/loader-utils": "^1.1.3",
    "@types/memory-fs": "^0.3.1",
    "@types/node": "^10.5.7",
    "file-loader": "^1.1.11",
    "jest": "^23.5.0",
    "memory-fs": "^0.4.1",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "tslint-config-webschik": "^1.0.0",
    "typescript": "^3.0.1",
    "webpack": "^4.16.5"
  },
  "dependencies": {
    "loader-utils": "^1.1.0",
    "schema-utils": "^1.0.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "collectCoverageFrom": [
      "src/*.ts",
      "src/**/*.ts",
      "!src/*.d.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/files/",
      "/test/helpers"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*|\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
