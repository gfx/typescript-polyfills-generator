{
  "name": "typescript-polyfills-generator",
  "version": "0.1.1",
  "description": "Polyfills generator for a full ES2015+ environment support in TypeScript projects",
  "main": "./lib/index.js",
  "files": [
    "/lib"
  ],
  "scripts": {
    "test": "jest --no-cache",
    "coveralls": "npm run test && cat ./coverage/lcov.info | node ./node_modules/coveralls/bin/coveralls.js",
    "prepublish": "npm run build",
    "build": "rm -rf lib && tsc --rootDir src",
    "prelint": "prettier --write \"{src,test,scripts,jest}/**/*.{ts,js}\"",
    "lint": "tslint \"{test,src}/**/*.ts\"",
    "generate-support-info": "node -r ts-node/register scripts/generate-built-ins-support-info.ts",
    "generate-polyfills": "node -r ts-node/register scripts/generate-polyfills.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/webschik/ts-polyfill-loader.git"
  },
  "keywords": [
    "TypeScript",
    "webpack",
    "loader",
    "polyfill",
    "core-js",
    "@babel/polyfill"
  ],
  "author": "webschik",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webschik/ts-polyfill-loader/issues"
  },
  "homepage": "https://github.com/webschik/ts-polyfill-loader#readme",
  "devDependencies": {
    "@types/jest": "^23.3.14",
    "@types/loader-utils": "^1.1.3",
    "@types/lodash": "^4.14.120",
    "@types/memory-fs": "^0.3.2",
    "@types/node": "^10.12.24",
    "@types/semver": "^5.5.0",
    "awesome-typescript-loader": "^5.2.1",
    "compat-table": "github:kangax/compat-table",
    "core-js": "^2.6.4",
    "coveralls": "^3.0.2",
    "electron-to-chromium": "^1.3.62",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-coverage-processor": "^1.1.1",
    "lint-staged": "^8.1.3",
    "lodash": "^4.17.11",
    "memory-fs": "^0.4.1",
    "prettier": "^1.16.4",
    "raw-loader": "^0.5.1",
    "ts-jest": "^23.10.5",
    "ts-loader": "^4.5.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-webschik": "^1.0.0",
    "typescript": "^3.3.3",
    "webpack": "^4.29.3"
  },
  "dependencies": {
    "browserslist": "^4.4.1",
    "loader-utils": "^1.2.3",
    "schema-utils": "^1.0.0",
    "semver": "^5.6.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 93.55,
        "functions": 100,
        "lines": 100
      }
    },
    "collectCoverageFrom": [
      "src/*.ts",
      "src/**/*.ts",
      "!src/polyfills/**/*.ts",
      "!src/*.d.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/files/",
      "/test/helpers"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/jest/config.js",
    "testResultsProcessor": "<rootDir>/jest/test-results-processor.js",
    "testRegex": "(/test/.*|\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}